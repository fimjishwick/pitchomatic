<script>
$("p").hide();

//list of intros
var greets = [
  "I'd like to propose",
  "My pitch is for",
  "Why haven't we done",
  "I've got it! Why not put on",
  'Close your eyes, and picture:',
  'This is the production we deserve:',
  ]

// List of isms
var ism = [
	'postmodern',
	'really ironic',
	'demi-improvised',
	'genderqueer',
	'minimalist',
	'dystopian',
	'verbatim',
	'Arena Spectacular',
	'musical'
   ]

// List of plays
var play = [
	'Murder She Wrote',
	'Taming of the Shrew',
	'The Hitchhikers Guide to the Galaxy', 
	'The Fresh Prince of Bel Air',
	'The Old Testament',
	'That dumb long poem by TS Eliot',
	'Hamlet',
	'Scrabble',
	'Waiting for Godot',
	'The Glass Menagerie',
	'The Da Vinci Code',
	'The Removalists',
	'Anything by Martin McDonagh',
   ]

// List of aesthetics
var feel = [
	'Glam Rock',
	'Steampunk',
	'Game of Thrones',
	'Space Noir',
	'hella gay',
	'sci-fi',
	'Cold War'
   ]
   
$( "button" ).click(function() {
  
    //return a random greet
$('.greets').html(greets[Math.floor(Math.random() * greets.length)]);
  
  //return a random ism
$('.ism').html(ism[Math.floor(Math.random() * ism.length)]);

//return a random play
$('.play').html(play[Math.floor(Math.random() * play.length)]);

//return a random aesthetic
$('.feel').html(feel[Math.floor(Math.random() * feel.length)]);
});
  
</script>

